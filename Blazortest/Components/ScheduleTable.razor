@using Blazortest.Services

@code {
    [Parameter]
    public List<Works> WorkList { get; set; }
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-hover table-bordered h5">
                <tr class="font-weight-bold">
                    <th style="width: 20%;">行程編號</th>
                    <th style="width: 30%;">開始時間</th>
                    <th style="width: 30%;">結束時間</th>
                    <th style="width: 40%;">行程說明</th>
                </tr>

                @foreach (var item in WorkList)
                {
                    <tr>
                        <td class="text-nowrap">@item.Id.ToString("D6")</td>
                        <td class="text-nowrap">@item.StartTime.ToString("yyyy/MM/dd HH:mm")</td>
                        <td class="text-nowrap">@item.EndTime.ToString("yyyy/MM/dd HH:mm")</td>
                        <td>@item.Brief</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

